<form id="answers-upload-panel" name="answers-upload" method="POST" action="">
  <div class="instructions-wrapper">
    <p data-i18n="sa.import_answers_instructions">{{t "sa.import_answers_instructions"}}</p>
  </div>
  <div class="answers-upload-button-wrapper">
    <label for="examUpload">
      <button tabindex="0" class="upload-button sa-button-big" data-i18n="sa.import_answers">{{t
          "sa.import_answers"
        }}</button>
    </label>
    <div class="upload-takes-long-container">
      <span class="upload-spinner"></span>
      <span class="notification-text" data-i18n="sa.answer_upload_takes_time">{{t "sa.answer_upload_takes_time"}}</span>
    </div>
  </div>
  <input id="examUpload" class="upload-input" type="file" name="examUpload" accept=".meb" />
  <div class="upload-error error-notice"></div>
</form>